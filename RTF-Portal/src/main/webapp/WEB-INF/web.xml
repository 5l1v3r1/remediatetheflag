<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>RTF-Portal</display-name>
  <session-config>
    <session-timeout>60</session-timeout>
    <cookie-config>
      <name>RTFSESSION</name>
      <http-only>true</http-only>
      <!--<secure>COOKIE_FLAG</secure>-->
    </cookie-config>
  </session-config>
  <error-page>
    <error-code>404</error-code>
    <location>/404.html</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/500.html</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/500.html</location>
  </error-page>
  <error-page>
    <location>/500.html</location>
  </error-page>
  <filter>
    <filter-name>UserFilter</filter-name>
    <filter-class>com.remediatetheflag.portal.servlets.UserFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UserFilter</filter-name>
    <url-pattern>/user/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>ManagementFilter</filter-name>
    <filter-class>com.remediatetheflag.portal.servlets.ManagementFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ManagementFilter</filter-name>
    <url-pattern>/management/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.remediatetheflag.portal.servlets.SessionListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.remediatetheflag.portal.servlets.AppContextListener</listener-class>
  </listener>
  <servlet>
    <description>HServlet</description>
    <servlet-name>HServlet</servlet-name>
    <servlet-class>com.remediatetheflag.portal.servlets.HServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HServlet</servlet-name>
    <url-pattern>/hservlet/handler</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>ManagementServlet</description>
    <servlet-name>ManagementServlet</servlet-name>
    <servlet-class>com.remediatetheflag.portal.servlets.ManagementServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ManagementServlet</servlet-name>
    <url-pattern>/management/handler</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>UnauthServlet</description>
    <servlet-name>UnauthServlet</servlet-name>
    <servlet-class>com.remediatetheflag.portal.servlets.UnauthServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UnauthServlet</servlet-name>
    <url-pattern>/handler</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>ImageServlet</description>
    <servlet-name>ImageServlet</servlet-name>
    <servlet-class>com.remediatetheflag.portal.servlets.ImageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ImageServlet</servlet-name>
    <url-pattern>/user/image</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>UserServlet</description>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.remediatetheflag.portal.servlets.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user/handler</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>/index.html</welcome-file>
  </welcome-file-list>
</web-app>