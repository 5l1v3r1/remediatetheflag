#	return 301 https://$host$request_uri;
#}
server{
        root /var/www/html;
	listen 80 default_server;
        server_name FQDNTOREPLACE;
        server_tokens off;

	ssl                  off;
        #ssl_certificate      /etc/letsencrypt/live/FQDNTOREPLACE/fullchain.pem;
        #ssl_certificate_key  /etc/letsencrypt/live/FQDNTOREPLACE/privkey.pem;
        ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
        ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
        ssl_prefer_server_ciphers on;
        ssl_session_cache shared:SSL:10m;
        ssl_session_timeout 10m;

	location /rtf/ {
            add_header X-Content-Type-Options nosniff;
            add_header X-XSS-Protection "1; mode=block";
	    #add_header Strict-Transport-Security "max-age=31536000; includeSubdomains;";
	    proxy_pass http://localhost:8080/guacamole/;
  	    proxy_buffering off;
	    proxy_http_version 1.1;
	    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	    proxy_set_header Upgrade $http_upgrade;
	    proxy_set_header Connection $http_connection;
	    proxy_cookie_path /guacamole/ /rtf/;
	    access_log off;
	}
        location /helper/ {
            allow 52.212.28.5;
            allow 10.0.0.0/16;
            deny all;
            proxy_pass http://localhost:8080/helper/;
            add_header X-Frame-Options DENY;
            add_header X-Content-Type-Options nosniff;
            add_header X-XSS-Protection "1; mode=block";
            #add_header Strict-Transport-Security "max-age=31536000; includeSubdomains;";
	    proxy_buffering off;
            proxy_http_version 1.1;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
}
